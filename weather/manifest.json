{
  // Required
  "manifest_version": 2,
  "name": "Weather",
  "version": "1.0",

  // Recommended
  "description": "Weather 1.0",

  // Pick one (or none)
  "browser_action": {
    "default_title": "Weather",
    "default_icon": "icons/weather.png",
    "default_popup": "html/popup.html"
  },

  "permissions": [
    "geolocation"
  ],

  // Optional
  "author": "Roman",
  "options_page": "html/options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "html/options.html"
  }
}